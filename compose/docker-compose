version: '2'

services:

  node1:
    image: xemuliam/nifi
    ports:
      - 8081:8080
    environment:
      INSTANCE_ROLE: 'cluster-node'
      USE_EMBEDDED_ZK: 'true'
      ZK_NODES_LIST: 'node1:2181'
      MYID: 1

  node2:
    image: xemuliam/nifi
    ports:
      - 8082:8080
    environment:
      INSTANCE_ROLE: 'cluster-node'
      USE_EMBEDDED_ZK: 'false'
      ZK_NODES_LIST: 'node1:2181'
      MYID: 2
